# fancy prompt using starship
# language specific prompt stylings are untested

format = """
$username\
$hostname\
$directory\
$git_branch\
$git_status\
$c\
$java\
$ocaml\
$nodejs\
$conda\
$docker_context\
$time\
[ï” ]( blue)\
"""

# Wait 10 milliseconds for starship to check files under the current directory.
scan_timeout = 10
 
# Disable the blank line at the start of the prompt
add_newline = false

[username]
show_always = false
style_user = " blue"
style_root = " blue"
format = '[$user ]($style)'

[hostname]
style = "yellow"
ssh_only = true
format = '[ $hostname ]($style)'

[directory]
style = " purple"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "â€¦/"

[git_branch]
symbol = "îœ¥" # git-branch
style = " yellow"
format = '[ $symbol $branch ]($style)'

[git_status]
ahead = 'ï‚ª ${count}'
diverged = 'ó°˜– ï‚ª ${ahead_count} ï‚« ${behind_count}'
behind = 'ï‚« ${count}'
up_to_date = 'ï˜'
style = " blue"
format = '[ $ahead_behind ]($style)'

[c]
symbol = "î˜ " # c
style = "dimmed blue"
format = '[ $symbol ($version) ]($style)'

[conda]
symbol = "ó±” " # snake
format = '[ $symbol $environment ](dimmed green) '

[java]
symbol = "îœ¸ " # java
style = "dimmed brown"
format = '[ $symbol ($version) ]($style)'

[ocaml]
format = 'via [ğŸª $switch_name]($style) '

[nodejs]
symbol = "ó°™ " # node
style = "dimmed green"
format = '[ $symbol ($version) ]($style)'
