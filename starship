format = """
$username\
$directory\
$git_branch\
$git_status\
$c\
$java\
$nodejs\
$conda\
$docker_context\
$time\
 \
"""

# Wait 10 milliseconds for starship to check files under the current directory.
scan_timeout = 10
 
# Disable the blank line at the start of the prompt
add_newline = false

[username]
show_always = true
style_user = "bold purple"
style_root = "bold red"
format = '[$user ]($style)'
 
[directory]
style = "bold red"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

[git_branch]
symbol = "" # git-branch
style = "bold yellow"
format = '[ $symbol $branch ]($style)'

[git_status]
ahead = ' ${count}'
diverged = '󰘖  {ahead_count}  ${behind_count}'
behind = ' ${count}'
style = "bold blue"
format = '[ $ahead_behind ]($style)'

[c]
symbol = " " # c
style = "dimmed blue"
format = '[ $symbol ($version) ]($style)'

[conda]
symbol = "󱔎 " # snake
format = '[ $symbol $environment ](dimmed green) '

[java]
symbol = " " # java
style = "dimmed brown"
format = '[ $symbol ($version) ]($style)'

[nodejs]
symbol = "󰎙 " # node
style = "dimmed green"
format = '[ $symbol ($version) ]($style)'